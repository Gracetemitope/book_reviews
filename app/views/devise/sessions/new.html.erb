<h3 class="text-center mt-5"> Welcome Back! &#x1F917;</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="new_review align-items-center d-flex flex-column">
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign in", class: 'form-control primary-bg-color mt-2' %>
  </div>
  <p class="mt-3">Don't have an account?
    <%= link_to "Sign up", new_registration_path(resource_name) %></p>

  </div>
<% end %>