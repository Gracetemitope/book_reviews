<!DOCTYPE html>
<html>
  <head>
    <title>BookReviews</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
				
    <link rel="stylesheet" type="text/css" href="slick/slick.css"/>
<link rel="stylesheet" type="text/css" href="slick/slick-theme.css"/>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:notice] %>
  <div class="notification primary">
   <p class="notice"><%= notice %></p>
</div>
<% end %>
 <% if flash[:alert] %>
  <div class="notification danger">
       <p class="alert"><%= alert %></p>
  </div>
<% end %>
       <nav class="navbar navbar-expand-lg  static-top">
  <div class="container">
    <a class="navbar-brand" href="#">
    R 0'cLoCk
        </a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
                          <%= link_to 'Home', root_path, class: 'nav-link' %>

        </li>

      <li class="nav-item">
                <%= link_to 'Write a Review', new_review_path, class: 'nav-link' %>

      </li>
        <%= category_links(all_categories) %>

      </ul>

    </div>
     <% if user_signed_in? %>
                                     <strong class="button">    <%= current_user.name%></strong>
|
      <%= link_to "Log Out", destroy_user_session_path, method: :delete, class: "button is_danger" %>
                        <% else %>
                                                                        <%= link_to "Log In", new_user_session_path, class: "button is_primary" %>
|
            <%= link_to "Register", new_user_registration_path, class: "button is_primary" %> 
                                                <% end %>
  </div>
</nav>

    <%= yield %>
    <%= render "layouts/footer" %>
  </body>
</html>
